<?xml version='1.0' encoding='utf-8'?>
<widget id="gq.vdynamic.cauviry" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>cauviry</name>
    <description>
        An app for IITM Cauvery's TV Room Remote Control.
    </description>
    <author email="vedaant.arya.v3d3@gmail.com" href="http://vdynamic.gq">
        v3d3
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="NavigationBarBackgroundColor" value="#000000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="icons/android/hdpi/ic_launcher.png" density="hdpi" />
        <icon src="icons/android/mdpi/ic_launcher.png" density="mdpi" />
        <icon src="icons/android/xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="icons/android/xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="icons/android/xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
